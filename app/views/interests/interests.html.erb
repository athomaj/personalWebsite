<h2><%= t(:interests)%></h2>
<hr />
	<% @interests.myInterests.each_with_index do |interest, index| %>

<div class="row">
	<div class="col-md-4 <%= (index % 2 == 0) ? 'left' : 'right'; %>">
		<img src="<%= interest[:image] %>" alt="<%= interest[:title] %>" width="220" height="220" />
	</div>
	<div class="col-md-8 interest-content">
		<h3><%= interest[:title] %></h3>
		<p>
			<%= interest[:description] %>
		</p>
	</div>
</div>

<% end %>
