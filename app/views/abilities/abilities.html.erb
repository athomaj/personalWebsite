<h2><%= t(:abilities)%></h2>

<hr />

<h3><%= t(:skills)%></h3>

<div class="row">

	<div class="col-md-6">
		<ul class="no-bullets">

			<% @abilities.skills.each_with_index do |skill, index| %>

			<li>
				<span class="ability-title"><%= skill[:title] %></span>
				<span class="ability-score">

					<% for stars in 0..4 %>

					<span class="glyphicon glyphicon-star <%= skill[:level] > stars ? 'filled' : ''; %>"></span>

					<% end %>

				</span>
			</li>
			<% if @abilities.skills.length / 2 == index + 1 %>
		</ul>
	</div>
	<div class="col-md-6">
		<ul class="no-bullets">
			<% end %>
		<% end %>
		</ul>
	</div>

</div>

