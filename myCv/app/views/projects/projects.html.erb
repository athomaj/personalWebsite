<h2>Projects</h2>
<hr />

<div class="row">

	<% @projects.myProjects.each_with_index do |project, index| %>

	<div class="col-md-6 col-sm-12 col-xs-12">
		<figure class="effect">
			<img src="assets/<%=project[:image] %>" alt="<%= project[:title] %>" />

			<figcaption>
				<h3><%= project[:title] %></h3>
				<p><%= project[:description] %></p>
				<p><strong>Tags:</strong> <br /><%= project[:tags] %></p>
				<a href="<%= project[:link] %>" target="_blank">View more</a>
				<span class="icon">
					<span class="glyphicon glyphicon-new-window"></span>
				</span>
			</figcaption>
		</figure>
	</div>

<% end %>
</div>
